@require "./GridRow/GridRow";

.Grid {
}

table {
	table-layout: fixed;
	border-collapse: collapse;
	font-size: 14px;
}

th {
	font-weight: bold;
	color: #333;
	background-color: #CCC;
	border: 1px solid #666;
	padding: 2px 0;

	&:first-child {
		background-color: #999;
	}
}

td {
	&:first-child {
		color: #333;
		font-weight: bold;
		background-color: #CCC;
		border: 1px solid #666;
		text-align: right;
		padding-right: 5px;
	}
	&:not(:first-child) {
		border: 1px solid #CCC;
		text-align: right;
		padding: 2px 3px;
	}
}
